<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.filmotecalite.HomeController">
    <top>
        <VBox spacing="5">
            <Label style="-fx-font-size: 24px; -fx-padding: 10;" text="FilmotecaLite" />
            <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
                <Button fx:id="mostrarFavoritasButton" onAction="#mostrarFavoritas" text="Favoritas" />
                <Button fx:id="mostrarFilmotecaButton" onAction="#mostrarFilmoteca" text="Filmoteca" />

                <Region fx:id="espaciador" HBox.hgrow="ALWAYS" />

                <VBox spacing="5" alignment="CENTER_RIGHT">
                    <Label fx:id="usuarioLabel" text="Usuario: " style="-fx-font-weight: bold;" />
                    <Button fx:id="logoutButton" text="Cerrar sesión" onAction="#handleLogout" />
                </VBox>
            </HBox>

        </VBox>
    </top>

    <center>
        <TableView fx:id="peliculasTableView" prefHeight="500" prefWidth="482.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="tituloColumn" text="Título" />
                <TableColumn fx:id="generoColumn" text="Género" />
                <TableColumn fx:id="directorColumn" text="Director" />
                <TableColumn fx:id="duracionColumn" text="Duración" />
                <TableColumn fx:id="ratingColumn" text="Rating" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <GridPane hgap="10" vgap="10">
                <!-- Campos de formulario -->
                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="tituloField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Director:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="directorField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Género:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="generoField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Duración (min):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="duracionField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="addButton" onAction="#handleAdd" text="Añadir Película" />
                <Button fx:id="updateButton" onAction="#handleUpdate" text="Actualizar" />
                <Button fx:id="deleteButton" onAction="#handleDelete" text="Eliminar" />
                <Button fx:id="resetFields" onAction="#resetFields" text="Borrar Campos" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
